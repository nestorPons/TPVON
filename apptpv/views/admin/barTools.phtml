<script>
    var menu = {
        tile    : document.getElementById('bartools-name-sections'),
        buttons : {
            $add        : $('#--id_add'),
            $del        : $('#--id_del'),
            $next       : $('#--id_next'),
            $prev       : $('#--id_prev'),
            $search     : $('#--id_search'),
            $print      : $('#--id_print'),
            $conf       : $('#--id_conf'),
            $filter     : $('#--id_filter'),
            show(arr = []){               
                $('#bartools').find('#bartools-actions').find('.menu-buttons').hide()
        echo(arr)
                for(i in arr){
                    menu.buttons['$'+arr[i]].show()
                }
            }
        },
        search  : {
            $search     : $('#<?= $txtSearch->id()?>'), 
            $txtSearch  : $('#<?= $txtSearch->id()?>').find('input'),
            $label      : $('#--id_search').find('.label'), 
            $icon       : $('#--id_search'),
            velocity    : 500,
            isOpen      : false,
            open(){
                this.$txtSearch.val('');
                this.$label.text('Cerrar');
                
                this.$icon
                    .removeClass('lnr-magnifier')
                    .addClass('lnr-cross')

                this.$search.animate({
                    left:  0
                }, this.velocity, fn => {
                    this.$txtSearch.focus()
                })
                this.isOpen = true;
                return this;
            },
            close(){
                this.$label.text('Buscar');
                // Icono buscar
                this.$icon
                    .removeClass('lnr-cross')
                    .addClass('lnr-magnifier');

                // Cerrar inputtext
                this.$search.animate({
                    left: window.innerWidth + 1000
                }, this.velocity)
                this.isOpen = false;
                return this;     
            },
            toggle(){
                event.stopPropagation();
                if( this.isOpen ) this.close()
                else this.open();
                return this;
            },
            keypress(e){
                if(e.key == 'Enter') this.search();
            },
            search(){
                typeof app[app.sections.active].search == 'function' && app[app.sections.active].search(this.$txtSearch.val()); 
                return this;
            },
            placerholder(param = null){
                if(param) $txtSearch.attr('placeholder', param);
                return $txtSearch.attr('placeholder');
            }
        },

        del(){
            if(app.mens.confirm('¿Desea eliminar el registro?'))
                app.sections.del()
        }
    }
</script>