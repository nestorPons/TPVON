<script>
    $('#input_<?=$emp->id()?>').focus()
    const tpv = {
        total: 0, 
        Ticket : new Ticket(),
        open(){
            $('#control_<?=$modTicket->id()?>').prop('checked',true)
            ticket.open(tpv.Ticket)
        },
        close(){
            $('#control_<?=$modTicket->id()?>').prop('checked',false)
        },
        create(){
            this.Ticket.employee = this.$employees.val()
            this.Ticket.employee_name = this.$employees.find(':selected').text()
            this.Ticket.client = this.$client.val()
            this.Ticket.client_name = this.$client.find(':selected').text()
            this.Ticket.date = new Date
            this.Ticket.id = this.$id.val()

            if(this.Ticket.validate())
                this.open()
            else 
                mns.error('Faltan datos para crear el ticket')

        },
        $id : $('#<?=$id->idEl()?>'), 
        $table : $('#<?=$table->idEl()?>'), 
        $code :  $('#<?=$code->idEl()?>'),
        $description : $('#<?=$des->idEl()?>'),
        $employees : $('#<?=$emp->idEl()?>'),
        $client : $('#<?=$cli->idEl()?>'),
        $hour : $('#<?=$hour->idEl()?>'),
        $quantity : $('#<?=$quan->idEl()?>'),
        $price : $('#<?=$pric->idEl()?>'),
        $dto : $('#<?=$dto->idEl()?>'),
        $amount : $('#<?=$amo->idEl()?>'),
        $btnOk : $('#<?=$btnOk->idEl()?>'),
        $btnClear : $('#<?=$btnClear->idEl()?>'),
        $total : $('#<?=$txtTotal->idEl()?>'),
        calculate(){
            let amount = this.$quantity.val() * this.$price.val(), 
                dto = this.$dto.val() * amount / 100, 
                total = amount - dto
            this.$amount.val(total)
        },
        clearLine(){
            this.$code.val('')
            this.$description.val('')
            this.$quantity.val(1)
            this.$price.val(0)
            this.$amount.val(0)
            this.$code.focus()
        },
        printTotal(){
            this.total = this.Ticket.total()
            this.$total.val(this.total)
        },
        addLine(){
            this.calculate()
            const $template = $( $('#template_<?=$table->id()?>')[0].innerHTML )
            var line = this.Ticket.addLine(
                this.$code.val(), 
                this.$description.val(), 
                this.$quantity.val(), 
                this.$price.val(), 
                this.$dto.val(), 
                this.$amount.val()
            )
            // Scroll al final
            this.$table.animate({ scrollTop: this.$table.height() }, 100);
    
            // Validamos los datos
            if(line.success){
                $template
                    .attr('idline', line.id)
                    .find('.C贸digo').html(line.cod).end()
                    .find('.Descripci贸n').html(line.des).end()
                    .find('.Cantidad').html(line.qua).end()
                    .find('.Precio').html(line.pri).end()
                    .find('.Dto').html(line.dto).end()
                    .find('.Importe').html(line.amo).end()
            
                this.$table.append($template) 
                this.clearLine()
                this.printTotal()
            } else {
                this.$code.focus()
            }
        },
        loadLine(){
            let code = this.$code.find(':selected').text()
            if(app.data.services[code]){
                this.$description.val(app.data.services[code]['descripcion'])
                this.$price.val(app.data.services[code]['precio'])
            }
        },
        loadLineFromTable(e){
            // Eliminamos la linea del objeto
            let line = this.Ticket.deleteLine(e.path[1].attributes.idline.value)[0]

            // Vista
            this.$code.val(line.cod)
            this.$description.val(line.des)
            this.$quantity.val(line.qua)
            this.$price.val(line.pri)
            this.$dto.val(line.dto)
            this.$amount.val(line.amo)

            $('#<?=$table->id()?>').find('[idline="'+e.path[1].attributes.idline.value+'"]').remove()
            
            this.printTotal()
        },
    }
</script>

