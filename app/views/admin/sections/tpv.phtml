<script>
    $('#input_<?=$emp->id()?>').focus()
    const tpv = {
        total: 0, 
        ticket : new Ticket(),
        $table : $('#<?=$table->id()?>'), 
        $code :  $('#input_<?=$code->id()?>'),
        $description : $('#input_<?=$des->id()?>'),
        $employees : $('#input_<?=$emp->id()?>'),
        $hour : $('#input_<?=$hour->id()?>'),
        $client : $('#input_<?=$cli->id()?>'),
        $quantity : $('#input_<?=$quan->id()?>'),
        $price : $('#input_<?=$pric->id()?>'),
        $dto : $('#input_<?=$dto->id()?>'),
        $amount : $('#input_<?=$amo->id()?>'),
        $btnOk : $('#<?=$btnOk->id()?>'),
        $btnClear : $('#<?=$btnClear->id()?>'),
        $total : $('#input_<?=$txtTotal->id()?>'),
        calculate(){
            let amount = this.$quantity.val() * this.$price.val(), 
                dto = this.$dto.val() * amount / 100, 
                total = amount - dto
            this.$amount.val(total)
        },
        clearLine(){
            this.$code.val('')
            this.$description.val('')
            this.$quantity.val(1)
            this.$price.val(0)
            this.$dto.val(0)
            this.$amount.val(0)
            this.$code.focus()
        },
        totalizer(){
            this.total = this.ticket.total()
            this.$total.val(this.total)
        },
        addLine(){
            this.calculate()
            const $template = $( $('#template_<?=$table->id()?>')[0].innerHTML )
            var line = this.ticket.addLine(
                this.$code.val(), 
                this.$description.val(), 
                this.$quantity.val(), 
                this.$price.val(), 
                this.$dto.val(), 
                this.$amount.val()
            )
            // Scroll al final
            this.$table.animate({ scrollTop: this.$table.height() }, 100);
    
            // Validamos los datos
            if(line.success){
                $template
                    .attr('idline', line.id)
                    .find('.C贸digo').html(line.cod).end()
                    .find('.Descripci贸n').html(line.des).end()
                    .find('.Cantidad').html(line.qua).end()
                    .find('.Precio').html(line.pri).end()
                    .find('.Dto').html(line.dto).end()
                    .find('.Importe').html(line.amo).end()
            
                this.$table.append($template) 
                this.clearLine()
                this.totalizer()
            } else {
                this.$code.focus()
            }
        },
        loadLine(){
            
            if(app.data.services[this.$code.val()]){
                this.$description.val(app.data.services[this.$code.val()]['descripcion'])
                this.$price.val(app.data.services[this.$code.val()]['precio'])
            }
        },
        loadLineFromTable(e){
            let line = this.ticket.lines[e.path[1].attributes.idline.value]
            this.$code.val(line.cod)
            this.$description.val(line.des)
            this.$quantity.val(line.qua)
            this.$price.val(line.pri)
            this.$dto.val(line.dto)
            this.$amount.val(line.amo)

            $('#<?=$table->id()?>').find('[idline="'+e.path[1].attributes.idline.value+'"]').remove()
            delete this.ticket.lines[e.path[1].attributes.idline.value]

            this.totalizer()
        }
    }
</script>