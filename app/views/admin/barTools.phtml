<script>
    var menu = {
        buttons : {
            $next: $('#<?= $next->id()?>'),
            $prev: $('#<?= $prev->id()?>'),
            $add: $('#<?= $add->id()?>'),
            $del: $('#<?= $del->id()?>'),
            $search: $('#<?= $search->id()?>'),
            
            show(arr = []){               
                $('#bartools').find('#bartools-actions').find('.menu-buttons').hide()
                for(i in arr){
                    menu.buttons['$'+arr[i]].show()
                }
            }
        },
        search: {
            $search: $('#<?= $txtSearch->id()?>'), 
            $txtSearch: $('#<?= $txtSearch->idEl()?>'),
            distance: 3000, 
            velocity: 500,
            open(){
                $this = this
                $this.$txtSearch.val('')
                this.$search.animate({
                    left: this.$search.position().left - this.distance
                }, this.velocity, function(){
                    $this.$txtSearch.focus()
                })
            },
            close(){
                this.$search.animate({
                    left: this.$search.position().left + this.distance
                }, this.velocity, function(){

                })    
            },
            toggle(){
                if( this.$search.position().left < this.distance) this.close()
                else this.open()
                
            },
            keypress(e){
                if(e.key == 'Enter')
                    typeof window[app.sections.active].search == 'function' && window[app.sections.active].search(this.$txtSearch.val())

            }
        }
    }
</script>